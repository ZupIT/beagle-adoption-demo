<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorDark</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="DefaultTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultTextAppearance.CustomText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultButton.CustomButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultButton.OrangeButton">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultButton.GreenButton">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorDark</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="DefaultToolbar.CustomToolbar">
        <item name="android:textColor">@color/colorDark</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/CustomTitleToolbar</item>
        <item name="centerTitle">true</item>
    </style>

    <style name="CustomTitleToolbar">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
